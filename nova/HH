<script>
// Menu toggle
const menuBtn = document.getElementById("menuBtn");
const mobileMenu = document.getElementById("mobileMenu");
if(menuBtn) menuBtn.onclick = () => mobileMenu.classList.toggle("hidden");

// منتجات جاهزة
const products = [
  {id: 1, name: "هودي رجالي أسود", price: 350, img: "0df31358-c64a-4401-b5ee-9349a9c24535.jpg"},
  {id: 2, name: "تيشيرت أبيض", price: 250, img: "pexels-pixabay-269887.jpg"},
  {id: 3, name: "بنطلون جينز", price: 500, img: "images.jpg"}
];

// عرض المنتجات
function loadProducts() {
  const container = document.getElementById("productsContainer");
  container.innerHTML = "";
  products.forEach(p => {
    const div = document.createElement("div");
    div.className = "bg-black/50 p-4 rounded-xl card-hover";
    div.innerHTML = `
      <img src="${p.img}" class="w-full h-64 object-cover rounded-xl mb-4">
      <h3 class="text-lg font-bold mb-2">${p.name}</h3>
      <p class="mb-4">${p.price} جنيه</p>
      <div class="flex justify-between items-center">
        <input type="number" min="1" value="1" id="qty-${p.id}" class="w-16 text-center bg-black/70 border border-gray-600 rounded-lg text-white">
        <button class="glow-btn" onclick="addToBasket(${p.id})">Add to Basket</button>
      </div>
    `;
    container.appendChild(div);
  });
}

// إضافة للسلة
function addToBasket(id) {
  const product = products.find(p => p.id === id);
  const qty = parseInt(document.getElementById(`qty-${id}`).value);
  if(qty < 1) return;

  let basket = JSON.parse(localStorage.getItem("basket")) || [];

  // لو المنتج موجود بالفعل زد الكمية
  const existing = basket.find(item => item.id === id);
  if(existing) {
    existing.quantity += qty;
  } else {
    basket.push({id: product.id, name: product.name, price: product.price, quantity: qty});
  }

  localStorage.setItem("basket", JSON.stringify(basket));
  alert(`${product.name} تم إضافته للسلة!`);
}

loadProducts();
</script>


